<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Flow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/icon/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/icon/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link href="~/lib/filepond/filepond.css" rel="stylesheet" />
</head>
<body style="margin-bottom:unset">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Task Flow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="line-height:unset;margin-bottom:20px">
        <div class="container" style="margin-top:30px">
            <div class="row">
                <div class="col-md-4">
                    <h6>Quick Links:</h6>
                    <ul>
                        <li><a href="#" class="custom-link">About Us</a></li>
                        <li><a href="#" class="custom-link">Contact Us</a> </li>
                        <li><a href="#" class="custom-link">Privacy Policy</a> </li>
                        <li><a href="#" class="custom-link">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Follow us on:</h6>
                    <ul>
                        <li><a href="#" class="custom-link"><i class="bi bi-twitter"></i> Twitter</a></li>
                        <li><a href="#" class="custom-link"><i class="bi bi-facebook"></i> Facebook</a></li>
                        <li><a href="#" class="custom-link"><i class="bi bi-instagram"></i> Instagram</a></li>
                    </ul>

                </div>
                <div class="col-md-4">
                    <h6>Newsletter Signup:</h6>
                    <p>Subscribe to our newsletter for updates and tips!</p>
                    <div class="mb-3">
                        <input type="email" class="form-control" id="subscribeEmail" placeholder="name@example.com">
                    </div>
                    <p class="text-center">
                        <button type="button" class="btn btn-light">Submit</button>
                    </p>
                </div>
            </div>

        </div>
        <hr style="color:#d5d5d5" />
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Task Flow
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/filepond/filepond.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
