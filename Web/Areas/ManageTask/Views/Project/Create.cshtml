@using Web.Areas.ManageTask.Models
@model CreateProjectViewModel

@{
	ViewData["Title"] = "Create new project";
}
<div class="row">
	<div class="col-12">
		<div class="card mb-4">
			<div class="card-header"><strong>Create new project</strong></div>
			<div class="card-body">
				<form asp-action="Create" method="post">

					<div class="mb-3 row">
						<label class="col-sm-2 col-form-label" asp-for="Name"></label>
						<div class="col-sm-10">
							<input class="form-control" asp-for="Name" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>
					<div class="mb-3 row">
						<label class="col-sm-2 form-label" asp-for="Description"></label>
						<div class="col-sm-10">
							<textarea class="form-control" asp-for="Description" rows="3"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>


					</div>
					<div class="mb-3 row">
						<div class="col-sm-6">
							<div class="row">
								<label class="col-sm-4 col-form-label" asp-for="StartDate"></label>
								<div class="col-sm-8">
									<input class="form-control" asp-for="StartDate" />
									<span asp-validation-for="StartDate" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<label class="col-sm-4 col-form-label" asp-for="EndDate"></label>
								<div class="col-sm-8">
									<input class="form-control" asp-for="EndDate" />
									<span asp-validation-for="EndDate" class="text-danger"></span>
								</div>
							</div>
						</div>
					</div>


					<div class="d-grid gap-2 d-md-flex justify-content-md-end">
						<button class="btn btn-primary me-md-2" type="submit">Create</button>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		tinymce.init({
			selector: '#Description',
			license_key: 'gpl',
			branding: false,
			promotion: false
		});
	</script>
}
